<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="jonerys.test.springcrud.model.User" table="users" schema="goods">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="login">
            <column name="login" sql-type="varchar(255)" length="255"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(255)" length="255"/>
        </property>
        <property name="role">
            <column name="role" sql-type="varchar(20)" length="20"/>
        </property>
    </class>
</hibernate-mapping>